provider_config:
  bms:
    ssh_user: centos
    ssh_public_key: /home/centos/.ssh/centos_rsa.pub
    ssh_private_key: /home/centos/.ssh/centos_rsa
    ntpserver: 0.pl.pool.ntp.org
    nameserer: 8.8.8.8

instances:
  bms1:
    provider: bms
    ip: {{ contrail_ip }}
    roles:
      config_database:
      config:
      control:
      analytics_database:
      analytics:
      webui:
      vrouter:
      openstack:
      openstack_compute:

global_configuration:
  CONTAINER_REGISTRY: opencontrailnightly

contrail_configuration:
  CONTRAIL_VERSION: ocata-master-105
  CLOUD_ORCHESTRATOR: openstack
  LOG_LEVEL: SYS_DEBUG
  AAA_MODE: no-auth
  VROUTER_GATEWAY: {{ contrail_gateway }}
  PHYSICAL_INTERFACE: {{ contrail_interface }}
  AUTH_MODE: keystone
  KEYSTONE_AUTH_ADMIN_PASSWORD: admin
  KEYSTONE_AUTH_HOST: {{ openstack_ip }}
  KEYSTONE_AUTH_URL_VERSION: /v3
  RABBITMQ_NODE_PORT: 5673
  UPDATE_IMAGES: true
  UPGRADE_KERNEL: true
  CONTROLLER_NODES: {{ contrail_ip }}
  CONTROL_NODES: {{ contrail_ip }}
  ANALYTICSDB_NODES: {{ contrail_ip }}
  WEBUI_NODES: {{ contrail_ip }}
  ANALYTICS_NODES: {{ contrail_ip }}
  CONFIGDB_NODES: {{ contrail_ip }}
  CONFIG_NODES: {{ contrail_ip }}
  CONFIG_NODEMGR__DEFAULTS__minimum_diskGB: 2
  DATABASE_NODEMGR__DEFAULTS__minimum_diskGB: 2
  JVM_EXTRA_OPTS: "-Xms1g -Xmx2g"